{
  "name": "react-router-project",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cd reactjs_v1 && npm run dev",
    "build": "cd reactjs_v1 && npm run build",
    "start": "cd reactjs_v1 && npm run start",
    "lint": "cd reactjs_v1 && npm run lint",
    "lint:fix": "cd reactjs_v1 && npm run lint:fix",
    "prettier": "cd reactjs_v1 && npm run prettier",
    "prettier:fix": "cd reactjs_v1 && npm run prettier:fix",
    "typecheck": "cd reactjs_v1 && npm run typecheck",
    "prepare": "husky",
    "install:all": "npm install && cd reactjs_v1 && npm install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "reactjs_v1/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix --prefix reactjs_v1"
    ],
    "reactjs_v1/**/*.{json,css,md}": [
      "npm run prettier:fix --prefix reactjs_v1"
    ],
    "*.{json,md}": [
      "npx prettier --write"
    ]
  }
}
